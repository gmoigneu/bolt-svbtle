</div><!-- .entry-meta -->

<header id="begin">
	<time datetime="{{ "now"|date("Y-m-d") }}" id="top_time">{{ "now"|date("F d, Y") }}</time>
</header>

<article id="<?php the_ID(); ?>" class="post">
	<h2 class="entry-title">{{ record.title }}</h2>
	{% if record.image!="" %}
	        <div class='imageholder-wide'><img src="{{ record.image|thumbnail(500, 400) }}"></div>
	{% endif %}
	<div class="entry-content">
		{{ record.body }}
	</div><!-- .entry-content -->
	<aside class="kudo kudoable" id="<?php the_ID(); ?>">
		<a href="?" class="kudobject">
			<div class="opening clearfix">
				<span class="circle">&nbsp;</span>
			</div>
		</a>
		<a href="?" class="counter">
			<span class="num">{{ record.kudos|number_format(0, '.', ',') }}</span>
			<span class="txt">Kudos</span>
		</a>
	</aside>

	{{ disqus( record.title ) }}
</article><!-- #post-## -->

